{
  "manifest_version": 3,
  "name": "Theme Customizer",
  "description": "Get granular control over the look and feel of your Chrome browser.",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon16.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["storage", "management", "fontSettings", "wallpaper"]
}